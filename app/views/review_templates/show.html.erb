<h1>Flashcard Review</h1>

<% if @card && @review %>
  <div class="flashcard">
    <p><%= @card.word %></p>
  </div>

  <!-- Hidden answer -->
  <p id="hidden-answer" style="display: none;">
    <%= @card.translation %>
  </p>

  <!-- Hidden form -->
  <div id="review-buttons" style="display: none;">
    <%= form_with url: "/reviews/#{@review.id}", method: :put do %>
      <%= hidden_field_tag :id, @card.id %>
      <%= button_tag "Correct", name: "result", value: "correct" %>
      <%= button_tag "Incorrect", name: "result", value: "incorrect" %>
    <% end %>
  </div>

  <!-- Clickable span styled as a button -->
  <span
    id="show-answer-btn"
    onclick="
      document.getElementById('hidden-answer').style.display='block';
      document.getElementById('review-buttons').style.display='block';
      this.style.display='none';
    "
    style="
      display: inline-block;
      padding: 8px 16px;
      background-color: #007bff;
      color: white;
      border-radius: 4px;
      cursor: pointer;
      text-align: center;
      margin-top: 8px;
    "
  >
    Show Answer
  </span>

<% else %>
  <p>No cards due! ðŸŽ‰</p>
<% end %>
