<h1>Flashcard Review</h1>

<% if @card && @review %>
  <div class="flashcard">
    <p><%= @card.word %></p>
  </div>

  <%= button_to "Show Answer", "/reviews/#{@review.id}?reveal=true", method: :get, params: { reveal: true } %>

 <% if params[:reveal] %>
    <div class="answer">
      <p><%= @card.translation %></p>
    </div>

    <%= form_with url: "/reviews/#{@review.id}", method: :put do %>
      <%= hidden_field_tag :id, @card.id %>
      <%= button_tag "Correct", name: "result", value: "correct" %>
      <%= button_tag "Incorrect", name: "result", value: "incorrect" %>

    <% end %>
  <% end %>
<% else %>
  <p>No cards due! ðŸŽ‰</p>
<% end %>
