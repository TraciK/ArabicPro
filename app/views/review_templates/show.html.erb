<h1>Flashcard Review</h1>

<% if @card %>
  <div class="flashcard">
    <p><%= @flashcard.word %></p>
  </div>

  <%= button_to "Show Answer", review_path(reveal: true), method: :get %>

  <% if params[:reveal] %>
    <div class="answer">
      <p><%= @card.translation %></p>
    </div>

    <%= form_with url: review_path(@card), method: :put do %>
      <%= hidden_field_tag :id, @card.id %>
      <%= button_tag "Correct", name: "result", value: "correct" %>
      <%= button_tag "Incorrect", name: "result", value: "incorrect" %>
    <% end %>
  <% end %>
<% else %>
  <p>No cards due! ðŸŽ‰</p>
<% end %>
